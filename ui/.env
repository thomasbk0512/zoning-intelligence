# Preview Environment Configuration
# Copy this to .env for local preview: cp .env.preview .env

# Enable Answer Cards feature
VITE_ANSWERS_ENABLE=true

# Use real rules engine (0 = real, 1 = stubbed/golden fixtures)
# Set to 1 in CI for deterministic tests
VITE_ANSWERS_STUB=0

# Enable telemetry collection
VITE_TELEM_ENABLE=true

# Telemetry transport: console (local), http (production), none (disabled)
VITE_TELEM_TRANSPORT=console

# Preview build mode (enables additional debug info)
VITE_PREVIEW_BUILD=true
