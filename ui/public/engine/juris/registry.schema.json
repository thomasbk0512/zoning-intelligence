{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "code_ids", "priority"],
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique jurisdiction identifier"
      },
      "name": {
        "type": "string",
        "description": "Human-readable jurisdiction name"
      },
      "code_ids": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "description": "Code identifiers used by this jurisdiction"
      },
      "priority": {
        "type": "number",
        "description": "Resolution priority (lower = higher priority)"
      }
    },
    "additionalProperties": false
  }
}

