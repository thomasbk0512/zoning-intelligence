{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["jurisdiction_id", "version", "published_at", "sources", "hash"],
  "properties": {
    "jurisdiction_id": {
      "type": "string",
      "description": "Jurisdiction identifier (e.g., 'austin', 'travis_etj')"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{2}$",
      "description": "Version in YYYY.MM format"
    },
    "published_at": {
      "type": "string",
      "format": "date",
      "description": "Publication date in YYYY-MM-DD format"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code_id", "name", "url", "sections"],
        "properties": {
          "code_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "sections": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of the anchors file"
    }
  },
  "additionalProperties": false
}

