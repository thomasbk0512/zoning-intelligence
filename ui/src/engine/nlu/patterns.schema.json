{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["intents", "locators"],
  "properties": {
    "intents": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "required": ["keywords", "hints"],
          "properties": {
            "keywords": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "hints": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "locators": {
      "type": "object",
      "required": ["apn", "latlng"],
      "properties": {
        "apn": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "latlng": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

